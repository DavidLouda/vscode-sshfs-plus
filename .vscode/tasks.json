{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Extension - Watch all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Extension Common - Watch",
                "Extension - Watch non-Common"
            ],
            "problemMatcher": [],
            "isBackground": true,
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Extension - Watch non-Common",
            "group": "build",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Extension - Watch",
                "Extension WebView - Watch"
            ],
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "Extension Common - Watch",
            "command": "yarn watch",
            "options": {
                "cwd": "./common"
            },
            "group": "build",
            "problemMatcher": {
                "base": "$tsc-watch",
                "source": "tsc-watch",
                "owner": "tsc-watch",
                "applyTo": "allDocuments"
            },
            "isBackground": true
        },
        {
            "type": "npm",
            "label": "Extension - Watch",
            "script": "watch",
            "group": "build",
            "problemMatcher": {
                "owner": "webpack-ts-loader",
                "source": "webpack-ts-loader",
                "applyTo": "allDocuments",
                "severity": "error",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^ERROR in (.+)\\((\\d+),(\\d+)\\)",
                    "file": 1,
                    "line": 2,
                    "column": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack .+ is watching the files",
                    "endsPattern": "webpack .+ compiled"
                }
            },
            "isBackground": true
        },
        {
            "type": "shell",
            "label": "Extension WebView - Watch",
            "command": "yarn start",
            "options": {
                "cwd": "./webview"
            },
            "group": "build",
            "problemMatcher": {
                "owner": "webpack-ts-loader",
                "source": "webpack-ts-loader",
                "applyTo": "allDocuments",
                "severity": "error",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^ERROR in (.+)\\((\\d+),(\\d+)\\)",
                    "file": 1,
                    "line": 2,
                    "column": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack .+ is watching the files",
                    "endsPattern": "webpack .+ compiled"
                }
            },
            "isBackground": true
        }
    ]
}